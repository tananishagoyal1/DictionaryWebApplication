@model RegisterUserViewModel
@{
    ViewBag.Title = "User Registration";
}
<img class="side-image" src="~/Images/catimage.png" />
<h2 class="register-form-heading text-center">"Explore Words. Join VocabVault Now!"</h2>
<div class="row login-form">
    <div class="register-card col-sm-4 text-white">
        @if (ViewBag.RegisterFailed != null && ViewBag.RegisterFailed)
        {
            <div class="alert alert-danger text-danger">
                <strong>@ViewBag.RegisterErrorMessages</strong>
            </div>
        }
        <form asp-controller="User" asp-action="Register" method="post">
            <div class="register-form-group">
                <div class="input-groups">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control input-field" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control input-field" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
           
            <div class="form-group register-form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control input-field" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group register-form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control input-field" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group register-form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control input-field" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="center-btn">
                <button type="submit" class="button form-register-btn">Register</button>
            </div>
            <div class="login-footer d-flex justify-content-center">
                <div>Already Have An Account?</div>
                <a class="login-click-link" asp-controller="user" asp-action="login"><b>Click here</b> </a>
            </div>
           
        </form>
    </div>
</div>